{% layout "layout.liquid" %}
{% block content %}

<nav class="breadcrumb container" aria-label="breadcrumbs">
  <ul>
    <li><a href="/days"><i class="fa fa-home"></i>&nbsp;&nbsp;Days</a></li>
    <li><a href="/days/{{ day._id }}"><i class="fas fa-dumbbell"></i>&nbsp;&nbsp;Workout</a></li>
    <li><a href="/days/{{ day._id }}/edit"><i class="fas fa-edit"></i>&nbsp;&nbsp;Edit Workout</a></li>
  </ul>
</nav>
<div class="container box has-text-centered">
  <form action="/days/{{ day._id }}?_method=PUT" method="post">
    <fieldset>
      <legend class="title is-4">Let's change Day {{ day.name }}</legend>
      <input class="button is-warning is-rounded mb-3" type="reset" value="Reset">
      <input class="button is-primary is-rounded mb-3 ml-5" type="submit" value="Change">
      
      <div class="control">
        <div class="select">
          <select class="mb-4" name="workoutType">
            
            <option class="p-4"
            {% if day.workoutType == "Rest" %}
              selected value="Rest"
            {% endif %}
            >Rest
            </option>

            <option class="p-4"
            {% if day.workoutType == "Pull" %}
              selected value="Pull"
            {% endif %}
            >Pull
            </option>

            <option class="p-4"
            {% if day.workoutType == "Push" %}
              selected value="Push"
            {% endif %}
            >Push
            </option>

            <option class="p-4"
            {% if day.workoutType == "Legs" %}
              selected value="Legs"
            {% endif %}
            >Legs
            </option>

          </select>
        </div>
      </div>

    </fieldset>
  </form>
</div>

{% endblock %}
