{% layout "layout.liquid" %}
{% block content %}

<nav class="breadcrumb container" aria-label="breadcrumbs">
  <ul>
    <li><a href="/days"><i class="fa fa-home"></i>&nbsp;&nbsp;Days</a></li>
    <li><a href="/days/{{ day._id }}"><i class="fas fa-dumbbell"></i>&nbsp;&nbsp;Workout</a></li>
    <li><a href="/days/{{ day._id }}/edit"><i class="fas fa-edit"></i>&nbsp;&nbsp;Edit Workout</a></li>
  </ul>
</nav>
<div class="container box has-text-centered">
  <form action="/days/{{ day._id }}?_method=PUT" method="post">
    <fieldset>
      <legend class="title is-4">Let's change Day {{ day.name }}</legend>
      {% comment %}
      <label>
        Day # <input type="text" name="name" value="{{ newDay }}" />
      </label>
      {% endcomment %}
      
      <div class="control">
        <div class="select is-multiple">
          <select multiple size="4" class="mb-4" name="workoutType">
            
            <option class="p-4"
            {% assign mod = newDay | modulo: 5 %}
            {% if day.workoutType == "Rest" %}
              selected value="Rest"
            {% endif %}
            >Rest
            </option>

            <option class="p-4"
            {% if day.workoutType == "Pull" %}
              selected value="Pull"
            {% endif %}
            >Pull
            </option>

            <option class="p-4"
            {% if day.workoutType == "Push" %}
              selected value="Push"
            {% endif %}
            >Push
            </option>

            <option class="p-4"
            {% if day.workoutType == "Legs" %}
              selected value="Legs"
            {% endif %}
            >Legs
            </option>

          </select>
        </div>
      </div>

      {% comment %}
      <div class="buttons has-addons">
        <button class="button is-success is-selected">Yes</button>
        <button class="button">Maybe</button>
        <button class="button">No</button>
      </div>
      
      <div class="buttons has-addons">
        <button class="button">Yes</button>
        <button class="button is-info is-selected">Maybe</button>
        <button class="button">No</button>
      </div>
      
      <div class="buttons has-addons">
        <button class="button">Yes</button>
        <button class="button">Maybe</button>
        <button class="button is-danger is-selected">No</button>
      </div>
      {% endcomment %}

      {% comment %}
      <div class="control">
        <label class="radio">
          <input type="radio" name="workoutType"
          {% if day.workoutType == "Rest" %}
            checked value="Rest"
          {% endif %}
          > Rest&nbsp;&nbsp;
        </label>
        <label class="radio">
          <input type="radio" name="workoutType"
          {% if day.workoutType == "Pull" %}
            checked value="Pull"
          {% endif %}
          > Pull&nbsp;&nbsp;
        </label>
        <label class="radio">
          <input type="radio" name="workoutType"
          {% if day.workoutType == "Push" %}
            checked value="Push"
          {% endif %}
          > Push&nbsp;&nbsp;
        </label>
        <label class="radio">
          <input type="radio" name="workoutType"
          {% if day.workoutType == "Legs" %}
            checked value="Legs"
          {% endif %}
          > Legs
        </label>
      </div>
      {% endcomment %}
      
    </fieldset>
    <input class="button is-primary mt-4 is-rounded" type="submit" value="Change Day {{ day.name }}">
  </form>
</div>

{% endblock %}
